@model Medinlinea.Models.Articulos

@{
    ViewBag.Title = "Nuevo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Style/estilos.css" rel="stylesheet" />
<link href="~/lib/bootstrap-rating/css/star-rating.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<link href="~/lib/bootstrap-rating/css/star-rating.css" rel="stylesheet" />

<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-10 col-lg-offset-1">

            <form id="form-especialista" enctype="multipart/form-data" action="~/Articulo/Create" method="post" onsubmit="showLoading();">
                @Html.AntiForgeryToken()
                
                <section>
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-3 control-label">Titulo</label>
                        <div class="col-sm-9">
                            <input maxlength="50"  type="text" class="form-control" name="titulo" id="titulo" placeholder="Ingresa el titulo" required>
                        </div>
                    </div>
                    <br><br>
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-3 control-label">Resumen</label>
                        <div class="col-sm-9">
                            <textarea maxlength="256" id="resumen" name="resumen" class="textarea form-control textarea-height" placeholder="Ingresa el resumen"></textarea>
                        </div>
                    </div>
                    <br><br>
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-3 control-label">Cuerpo</label>
                        <div class="col-sm-9">
                            <textarea maxlength="10000" id="cuerpo" name="cuerpo" class="textarea form-control textarea-height" placeholder="Ingresa el cuerpo"></textarea>
                        </div>
                    </div>
                    <br><br>
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-3 control-label">Etiquetas</label>
                        <div class="col-sm-9">
                            <input type="text" maxlength="49" class="form-control" id="etiquetas" name="etiquetas" placeholder="Ingresa las etiquetas">
                        </div>
                    </div>
                    <br><br>
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-3 control-label">Imagen</label>
                        <div class="col-sm-9">
                            <input type="file" class="form-control" id="imagenArt" name="imagenArt" placeholder="Ingresa la imagen">
                        </div>
                    </div>
                    <br><br>
                    <br><br>
                    <div class="center-block">
                        <button type="submit" class="btn btn-success">Guardar</button>
                        <button type="submit" class="btn btn-danger">Cancelar</button>
                    </div>
                </section>
            </form>

        </div>
    </div>
</div>






@model Medinlinea.Models.Especialidades

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Style/estilos.css" rel="stylesheet" />

<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-10 col-lg-offset-1">
            <div class="col-xs-12 col-sm-12">
                <div class="cajaTitulo">
                    <p class="text-center" style="font-size:30px !important; color:white;">EDITAR ESPECIALIDAD</p>
                </div>
            </div>
            <br />
            <br />
            <br />

            <form id="form-especialidad" enctype="multipart/form-data" action="~/Especialidad/Edit" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="IdEspecialidad" id="IdEspecialidad" value="@Model.IdEspecialidad" />
                <section>
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-3 control-label">Especialidad</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" name="NombreEspecialidad" value="@Model.NombreEspecialidad">
                            <br>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-3 control-label">Imagen</label>
                        <div class="col-sm-9">
                            <input type="file" class="form-control" name="ImagenEspecialidad" id="ImagenEspecialidad" placeholder="Ingresa tu foto">
                            <br>
                        </div>
                    </div>
                    <br><br>
                    <br><br>
                    <div class="center-block">
                        <button type="button" onclick="validar_enviar();" class="btn btn-success">Guardar</button>
                        <button type="button" onclick="showLoading(); location.href = '../index';" class="btn btn-danger">Cancelar</button>
                    </div>
                </section>
            </form>

        </div>
    </div>
</div>

<script type="text/javascript">
    //validacion de campos
    function validar_enviar() {
        var form = $("#form-especialidad");
        form.bootstrapValidator({
            feedbackIcons: {
                valid: 'glyphicon glyphicon-ok-circle',
                invalid: 'glyphicon glyphicon-ban-circle',
                validating: 'glyphicon glyphicon-refresh'
            },
            fields: {
                NombreEspecialidad: {
                    validators: {
                        notEmpty: {
                            message: "El nombre especialidad de inicio es requerido"
                        }
                    }
                }
            }
        });

        form.bootstrapValidator('validate');
        var bootstrapValidator = form.data('bootstrapValidator');
        if (bootstrapValidator.isValid()) {
            showLoading();
            formulario = document.getElementById("form-especialidad");
            formulario.submit();
        }
    };
</script>







@{
    ViewBag.Title = "AgregarEspecialidad";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Style/estilos.css" rel="stylesheet" />

<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-10 col-lg-offset-1">

            <form action="" id="form-especialista">
                <h2 style="text-align: center;">Ingreso de Nueva Especialidad</h2>
                <br>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-3 control-label">Especialidad</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" name="Especialidad" placeholder="Ingresa nombre  especialidad">
                        <br>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-3 control-label">Imagen</label>
                    <div class="col-sm-9">
                        <input type="file" class="form-control" id="imagen-especialidad" placeholder="Ingresa tu foto">
                        <br>
                    </div>
                </div>
            </form>
            <p class="text-center">
                <button type="button" name="paginar" onclick="getPagPublication(null);" class="btn btn-primary btn-sm">Nuevo</button>
            </p>


        </div>
    </div>
</div>


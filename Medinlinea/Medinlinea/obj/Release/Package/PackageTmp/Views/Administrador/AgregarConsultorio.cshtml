
@{
    ViewBag.Title = "AgregarConsultorio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Style/estilos.css" rel="stylesheet" />

<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-10 col-lg-offset-1">

            <form action="" id="form-especialista">
                <h2>Ingresar Consultorio</h2>
                <br>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-3 control-label">Especialista</label>
                    <div class="col-sm-9">
                        <select name="tipo-membresia" name="especialista-consultorio" class="form-control">
                            <option value="premium">Seleccione Especialista</option>
                            <option value="premium">Leonardo Montes</option>
                            <option value="gratuita">David Eduardo</option>
                        </select>
                        <br>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-3 control-label">Pais</label>
                    <div class="col-sm-9">
                        <select name="tipo-membresia" name="pais-consultorio" class="form-control">
                            <option value="premium">Seleccione Pais</option>
                            <option value="premium">Colombia</option>
                            <option value="gratuita">España</option>
                        </select>
                        <br>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-3 control-label">Deparmento</label>
                    <div class="col-sm-9">
                        <select name="tipo-membresia" name="departamento-consultorio" class="form-control">
                            <option value="premium">Seleccione Departamento</option>
                            <option value="premium">Caldas</option>
                            <option value="gratuita">Tolima</option>
                        </select>
                        <br>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-3 control-label">Ciudad</label>
                    <div class="col-sm-9">
                        <select name="tipo-membresia" name="ciudad-consultorio" class="form-control">
                            <option value="premium">Seleccione Ciudad</option>
                            <option value="premium">Manizales</option>
                            <option value="gratuita">Ibague</option>
                        </select>
                        <br>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-3 control-label">Calle</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" name="calle-consultorio" placeholder="Ingresa tu nombre">
                        <br>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-3 control-label">Telefono Fijo</label>
                    <div class="col-sm-9">
                        <input type="tel" class="form-control" name="telefono-consultorio" placeholder="Ingresa tu celular">
                        <br>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-3 control-label">Latitud</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" name="latitud-consultorio" placeholder="Ingresa tu latitud">
                        <br>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-3 control-label">Longitud</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" name="longitud-consultorio" placeholder="Ingresa tu longitud">
                        <br>
                    </div>
                </div>
            </form>
            <!--FALTAN BOTONES-->
            <p class="text-center">
                <button type="button" name="paginar" onclick="getPagPublication(null);" class="btn btn-primary btn-sm">Nuevo</button>
            </p>
        </div>
    </div>
</div>


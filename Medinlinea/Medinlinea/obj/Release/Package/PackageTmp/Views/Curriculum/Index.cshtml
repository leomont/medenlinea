@model Medinlinea.Models.CurriculumModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<link href="~/Style/estilos.css" rel="stylesheet" />


<div class="container">
    <!--Contenido que se muestra en la pagina-->
    <div class="content-wrap">
        <div class="row">
            <div class="col-xs-12 col-sm-12">
                <div class="cajaTitulo">
                    <p class="text-center" style="font-size:30px !important; color:white;">CURRICULUM</p>
                </div>
            </div>

            <div class="col-xs-12">
                @{
                    if (@ViewBag.isAdmin != null)
                    {
                        <p>
                            @Html.ActionLink("Nuevo Curriculum", "Create", null, new { @class = "btn btn-success" })
                        </p>
                    }
                }
                @foreach (var item in Model.Curriculums)
                {
                    <div class="col-xs-12 col-sm-9 col-sm-offset-1 col-md-9 col-md-offset-1 col-lg-9 col-lg-offset-1">
                        <div class="col-xs-12 col-sm-2 col-lg-2">
                            <span></span>
                            <img width="150" height="150" class="img-responsive" src="@item.ImagenCV">
                        </div>
                        <div class="col-xs-12 col-sm-10 col-lg-10">
                            <p>
                                @{
                    if (@item.DescripcionCV.Length > 300)
                    {
                        @item.DescripcionCV.Substring(0, 300)
                    }
                    else
                    {
                        @item.DescripcionCV
                    }
                                }
                            </p>

                            <br />
                            <br />
                            <br />
                            <p>
                                @Html.ActionLink("Edit", "Edit", new { id = item.IdCV }) |
                                @Html.ActionLink("Details", "Details", new { id = item.IdCV }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.IdCV })
                            </p>
                            <hr class="separar" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="pager">
        @*<div class="btn-group pull-right">*@
        @Html.PageLinks(@Model.Pagination, x => Url.Action("Index", new { page = x }))
    </div>
</div>

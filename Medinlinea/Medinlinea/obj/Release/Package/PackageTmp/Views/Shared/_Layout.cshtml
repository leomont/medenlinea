    <div>
        @RenderBody()


    </div>

    <div class="alert alert-success flyover flyover-bottom alerta-verde" id="msj-success">
    </div>
    <div class="alert alert-danger flyover flyover-bottom alerta-roja" id="msj-error">
    </div>

    <!--EMPIEZA EL MODAL-->

    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="exampleModalLabel">Iniciar sesión</h4>
                </div>
                <div class="modal-body">
                    <form role="form" id="form-logueo-usuario" enctype="multipart/form-data" action="~/Home/Autenticacion" method="post">
                        <input type="text" name="user_name" id="user_name" placeholder="Ingrese su usuario">
                        <input type="password" name="contrasena" id="contrasena" placeholder="Ingrese su contraseña">

                        <button value='Ingresar' name="enviar" type='submit'>Ingresar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!--TERMINA MODAL-->

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/Scripts/layout.js"></script>


    <script src="~/lib/owl.carousel/owl.carousel.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {

            //Muestro los mensajes enviados por el servidor
            @foreach (var d in @lstMensajes)
            {
                if (@d.tipo == "ERROR")
                {

                        @:messageError("@d.titulo", "@d.cuerpo");
                                                                                                                                                                                                                                                    }
                else
                {
                        @:messageSuccess("@d.titulo", "@d.cuerpo");
                                                                                                                                                                                                                                                                                }
            }
        });

        $(".owl-carousel").owlCarousel({
            margin: 10
        });

        $('#myModal').on('shown.bs.modal', function () {
        });
    </script>

    <script src="~/lib/jquery-steps/js/jquery.steps.js"></script>
    <script>
    $(function () {
        $("#form-especialista").steps({
            headerTag: "h2",
            bodyTag: "section",
            transitionEffect: "slideLeft",
            labels: {
                cancel: "Cancelar",
                current: "Actual paso:",
                pagination: "Paginacion",
                finish: "Terminar",
                next: "Siguiente",
                previous: "Anterior",
                loading: "Cargando ..."
            },
        });
    });
    </script>



@{
    ViewBag.Title = "ActualizarDatos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Style/estilos.css" rel="stylesheet" />

<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-10 col-lg-offset-1">

            <div class="col-xs-12 col-sm-2">
                <img class="img-responsive" src="../img/manizales/manizales_1.jpg" alt="">
            </div>

            <div class="col-xs-12 col-sm-10">

                <form action="" id="form-especialista">
                    <h2 style="text-align: center;">Actualizar Datos Medico Especialista</h2>
                   
                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-3 control-label">Nombre</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" name="nombre-medico-especialista" id="nombre-medico-especialista" placeholder="Ingresa tu nombre">
                                <br>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-3 control-label">Apellido</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" name="apellido-medico-especialista" id="apellido-medico-especialista" placeholder="Ingresa tu apellido">
                                <br>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-3 control-label">Pagina Web</label>
                            <div class="col-sm-9">
                                <input type="url" class="form-control" name="pagina-medico-especialista" id="pagina-medico-especialista" placeholder="Ingresa tu pagina">
                                <br>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-3 control-label">Email</label>
                            <div class="col-sm-9">
                                <input type="email" class="form-control" name="email-medico-especialista" id="email-medico-especialista" placeholder="Ingresa tu email">
                                <br>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-3 control-label">Celular</label>
                            <div class="col-sm-9">
                                <input type="tel" class="form-control" name="celular-medico-especialista" id="celular-medico-especialista" placeholder="Ingresa tu celular">
                                <br>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-3 control-label">Especialidad</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" name="especialidad-medico-especialista" id="especialidad-medico-especialista" placeholder="Ingresa tu especialidad">
                                <br>
                            </div>
                        </div>
                 
                </form>

            </div>

            <p class="text-center">
                <button type="button" name="paginar" onclick="getPagPublication(null);" class="btn btn-primary btn-sm">Actualizar</button>
            </p>

        </div>
    </div>
</div>

@model Medinlinea.Models.Usuarios

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content-wrap">

    <div class="col-xs-12 col-sm-12">
        <div class="cajaTitulo">
            <p class="text-center" style="font-size:30px !important; color:white;">DETALLE</p>
        </div>
    </div>
    <!--DATOS DEL LADO IZQUIERDO-->
    <div id="div_info_perfil" style="display:block" class="col-xs-12 col-sm-12 col-md-9 col-lg-8 col-lg-offset-2">

        <!--DATOS DEL CANDIDATO-->
        <br>
        <br>
        <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
            <div class="col-xs-9 col-sm-9">

                <div class="col-xs-12 col-sm-12">
                    <p class="text-left"><span style="font-size:23px !important;">@Model.NombreUsuario @Model.ApellidoUsuario</span></p>
                    <p><strong>Cedula: </strong><span id="empresa_actual">@Model.CedulaUsuario</span></p>
                    <p><strong>Email: </strong><span id="empresa_actual">@Model.EmailUsuario</span></p>
                    <p><strong>Dirección: </strong><span id="empresa_actual">@Model.Direccion</span></p>
                    <p><strong>Telefono: </strong><span id="empresa_actual">@Model.CelularUsuario</span></p>
                    <p><strong>Email logueo: </strong><span id="empresa_actual">@Model.EmailUsuario</span></p>
                    <p><strong>Estado: </strong><span id="empresa_actual">@Model.Activo</span></p>

                </div>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-8">
                        <input type="submit" value="Delete" class="btn btn-success" /> |
                        @Html.ActionLink("Back to List", "Index")
                    </div>
                }
            </div>

        </div>

    </div>

</div>
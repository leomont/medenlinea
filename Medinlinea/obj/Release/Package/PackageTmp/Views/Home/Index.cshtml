@using Medinlinea.Models
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    List<Publicidades> publicidades = (ViewBag.listado1 != null) ? (List<Publicidades>)ViewBag.listado1 : new List<Publicidades>();
    List<Especialidades> especialidades = (ViewBag.listado2 != null) ? (List<Especialidades>)ViewBag.listado2 : new List<Especialidades>();
}


<ul class="cb-slideshow">
    @{
        foreach (Publicidades item in publicidades)
        {
            if (!string.IsNullOrWhiteSpace(item.ImagenPub))
            {
                <li><span style="background-image: url(@item.ImagenPub)"></span><div></div></li>
            }
            else
            {
                <li><span style="background-image: url(img/manizales/manizales_1.jpg)"></span><div></div></li>
            }
        }
    }

</ul>

<div class="container">

    <div class="row">

        <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-8 col-md-offset-2 col-lg-8 col-lg-offset-2">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-9 col-lg-pullset-3">
                <h2 style="text-align: center;">MANIZALES</h2>
            </div>
            <div class="buscadores">
                <form id="form-filtrar-especialidad" enctype="multipart/form-data" action="~/Especialista/Index" method="post" onsubmit="showLoading();">
                        <div class="row">
                            <div class="col-xs-12 col-sm-6 col-lg-6">
                                <div class="form-group">
                                    <label class="col-xs-2 col-sm-2 col-md-2" for="exampleInputName2"><i class="glyphicon glyphicon-education size-icon-buscadores"></i></label>
                                    <div class="col-xs-10 col-sm-6 col-md-10">
                                        <input type="text" class="form-control" name="nombre" id="nombre" placeholder="Buscar especialidad">
                                    </div>
                                    <br><br>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-6 col-lg-6">
                                <div class="form-group">
                                    <label class="col-xs-2 col-sm-2 col-md-2" for="exampleInputEmail2"><i class="glyphicon glyphicon-globe size-icon-buscadores"></i></label>
                                    <div class="col-xs-10 col-sm-10 col-md-10">
                                        <div class="input-group">
                                            <input type="text" class="form-control" name="ciudad" id="ciudad" placeholder="ubicación">
                                            <span class="input-group-btn">
                                                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
            </div>

        </div>

        <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-10 col-md-offset-1 col-lg-10 col-lg-offset-1">

            <!-- SLIDE OPCIONES ESPECIALIDADES -->

            <br><br><br>
            <h2 style="color:black; font-size: 17px;">BUSQUEDA POR ESPECIALIDAD</h2>
            <div class="owl-carousel">
                @{
                    foreach (Especialidades item in especialidades)
                    {
                        if (!string.IsNullOrWhiteSpace(item.ImagenEspecialidad))
                        {
                            <div class="img-caption">
                                <img src="@item.ImagenEspecialidad" alt="@item.NombreEspecialidad" style="cursor:pointer" onclick='enviar("@item.IdEspecialidad");'>
                                <div class="caption"><br>@item.NombreEspecialidad</div>
                            </div>
                        }
                        else
                        {
                            <div class="img-caption">
                                <img src="img/manizales/manizales_1.jpg" alt="Especialidad" style="cursor:pointer">
                                <div class="caption"><br>Especialidad</div>
                            </div>
                        }
                    }
                }
            </div>

        </div>
    </div>
</div>


<script type="text/javascript">
    function enviar(idEspecialidad)
    {
        showLoading();
        location.href = location.protocol + '//' + location.host + '/Especialista/Index?idEspecialidad=' + idEspecialidad;
    }
</script>
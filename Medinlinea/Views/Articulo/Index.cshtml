@model Medinlinea.Models.ArticulosModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<link href="~/Style/estilos.css" rel="stylesheet" />


<div class="container">
    <!--Contenido que se muestra en la pagina-->
    <div class="content-wrap">
        <div class="row">
            <div class="col-xs-12 col-sm-12">
                <div class="cajaTitulo">
                    <p class="text-center" style="font-size:30px !important; color:white;">ARTICULOS</p>
                </div>
            </div>

            <div class="col-xs-12">
                @{
                    if (@Model.Articulos != null)
                    {
                        <p>
                            @Html.ActionLink("Nuevo Articulo", "Create", null, new { @class = "btn btn-success" })
                        </p>

                        foreach (var item in Model.Articulos)
                        {
                            <div class="col-xs-12 col-sm-9 col-sm-offset-1 col-md-9 col-md-offset-1 col-lg-9 col-lg-offset-1">
                                <div class="col-xs-12 col-sm-2 col-lg-2">
                                    <span></span>
                                    <img width="150" height="150" class="img-responsive" src="@item.ImagenArt">
                                </div>
                                <div class="col-xs-12 col-sm-10 col-lg-10">
                                    <p class="text-left"><i class="fa fa-file fa-2x"></i><span style="font-size:23px !important;">&nbsp;&nbsp;&nbsp;@item.Titulo</span></p>
                                    <ul class="list-inline">
                                        <li><h6> @item.Especialistas.NombreEsp @item.Especialistas.ApellidoEsp </h6></li>
                                        <li><h6> @item.Etiquetas </h6></li>
                                    </ul>
                                    <h3> @item.Titulo</h3>
                                    <p>
                                        @{
                            if (@item.Cuerpo.Length > 300)
                            {
                                @item.Cuerpo.Substring(0, 300)
                            }
                            else
                            {
                                @item.Cuerpo
                            }
                                        }
                                    </p>
                                    <h4><a href="../Articulo/Details?id= + data.lstPublicaciones[k].id + "><i class="fa fa-plus"></i> Articulo completo</a></h4>
                                    <br />
                                    <br />
                                    <br />
                                    <p>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.IdArticulo }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.IdArticulo }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.IdArticulo })
                                    </p>
                                    <hr class="separar" />
                                </div>
                            </div>
                        }
                    }
                }
            </div>
        </div>
    </div>
    @*Por: Leonardo Montes
        Fecha: 27/12/2015
        Nota: Segmento de codigo para la paginacion de articulos*@

    <div class="pager">
        @*<div class="btn-group pull-right">*@
        @Html.PageLinks(Model.Pagination, x => Url.Action("Index", new { page = x }))
    </div>
</div>
